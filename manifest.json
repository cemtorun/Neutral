{
  "manifest_version": 2,
  "name": "Carbon",
  "version": "0.1.1",
  "description": "Neutralize your carbon emissions",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "declarativeContent",
    "storage",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Carbon",
    "default_popup": "src/popup/product.html"
  },
  "options_page": "src/options/dashboard.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/inject/contentScript.css"
      ],
      "js": [
        "src/inject/contentScript.js"
      ]
    }
  ]
}